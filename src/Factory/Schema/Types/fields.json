{
  "key": "fields",
  "label": "Custom Field Group",
  "documentation": "https://developer.wordpress.org/reference/functions/register_post_type/",
  "groups": [
    {
      "label": "Attributes",
      "expandable": true,
      "schema": {
        "key": {
          "label": "Key",
          "description": "(string) Unique identifier for field group.",
          "type": "id",
          "prefix": "group_",
          "required": true,
          "placeholder": "my-field-group"
        },
        "object_type": {
          "label": "Post Type",
          "description": "(array) (Required) Array of post types with which the field group should be associated.",
          "type": "type[]",
          "typeRelation": "post_type",
          "required": true
        },
        "title": {
          "label": "Title",
          "description": "(string) Visible in metabox handle",
          "type": "text",
          "required": true,
          "placeholder": "My Field Group"
        },
        "description": {
          "label": "Description",
          "description": "(string) A short descriptive summary of what the field group is for.",
          "type": "textarea",
          "placeholder": "My descriptive summary...",
          "default": ""
        }
      }
    },
    {
      "label": "Fields",
      "expandable": true,
      "schema": {
        "fields": {
          "label": "Fields",
          "description": "(array) An array of fields",
          "type": "repeater",
          "repeater": "field",
          "columns": [
            {
              "label": "Key",
              "key": "key",
              "type": "key"
            },
            {
              "label": "Description",
              "key": "description"
            }
          ]
        }
      }
    },
    {
      "label": "Location",
      "expandable": true,
      "schema": {
        "location": {
          "description": "(array) An array containing 'rule groups' where each 'rule group' is an array containing 'rules'. \n\t\t\tEach group is considered an 'or', and each rule is considered an 'and'.",
          "type": "rule_set[]"
        }
      }
    },
    {
      "label": "Appearance",
      "expandable": true,
      "schema": {
        "position": {
          "label": "Position",
          "description": "(string) Determines the position on the edit screen. Defaults to normal. Choices of 'acf_after_title', 'normal' or 'side'",
          "type": "select",
          "placeholder": "normal",
          "options": [
            "normal",
            "after_title",
            "side"
          ]
        },
        "style": {
          "label": "Style",
          "description": "(string) Determines the metabox style. Defaults to 'default'. Choices of 'default' or 'seamless'",
          "type": "select",
          "placeholder": "default",
          "options": [
            "default",
            "seamless"
          ]
        },
        "label_placement": {
          "label": "Label Placement",
          "description": "(string) Determines where field labels are places in relation to fields. Defaults to 'top'. \n\t\t\tChoices of 'top' (Above fields) or 'left' (Beside fields)",
          "type": "select",
          "placeholder": "top",
          "options": [
            "top",
            "left"
          ]
        },
        "menu_order": {
          "label": "Menu Order",
          "description": "(int) Field groups are shown in order from lowest to highest. Defaults to 0",
          "type": "number",
          "placeholder": "0"
        }
      }
    }
  ],
  "table": {
    "columns": [
      {
        "label": "Key/ID",
        "key": "key",
        "type": "key"
      },
      {
        "label": "Title",
        "key": "title",
        "type": "string"
      },
      {
        "label": "Description",
        "key": "description",
        "type": "description"
      }
    ]
  }
}
